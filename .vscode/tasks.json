{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compiler le jeu",
            "command": "gcc",
            "args": [
                "src/main.c",
                "src/assets.c",
                "src/game.c",
                "src/entity_pool.c",
                "src/input.c",
                "src/player.c",
                "src/geometry.c",
                "src/debug.c",
                "src/rendering.c",
                "src/physics.c",
                "src/serialize.c",
                "src/editor.c",
                "src/tilemap.c",
                "src/enemy.c",
                "src/ui.c",
                "src/anim.c",
                "-o",
                "app",
                "-ljansson",
                "-Iinclude",
                "-fdiagnostics-color=always",
                "-I/usr/include/SDL2",
                "-D_REENTRANT",
